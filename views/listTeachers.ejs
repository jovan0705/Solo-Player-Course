<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teachers</title>
    <link rel="stylesheet" href="../css/listTeacher.css">
</head>

<body>
    <div class = 'navbar'>
        <div class = 'navbar2'>
            <a href="/admin" class = 'nav'>Home</a>
            <a href="/admin/teachers" class = 'nav'>List Teacher</a>
            <a href="/admin/courses" class = 'nav'>List Course</a>
        </div>
    </div>
    <div class = "isi">
        <h1>Admin Page</h1>
        <table>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Education
                </th>
                <th>
                    Course
                </th>
                <th>Action</th>
            </tr>
    
            <%data.forEach(el=> {%>
                <tr>
                    <td>
                        <%=el.name%>
                    </td>
                    <td>
                        <%=el.gender%>
                    </td>
                    <td>
                        <%=el.education%>
                    </td>
                    <td>
                        <%=el.Course.name%>
                    </td>
                    <td>
                        <a href="/admin/teacher/<%=el.id%>/delete">
                            <button type="button">Delete Teacher</button>
                        </a>
                    </td>
                </tr>
                <%})%>
        </table>
    </div>

</body>

</html>