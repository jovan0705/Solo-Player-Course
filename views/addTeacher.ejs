<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Teacher</title>
    <link rel="stylesheet" href="../css/addTeacher.css">

</head>
<body>
    <div class = 'navbar'>
        <div class = 'navbar2'>
            <a href="/admin" class = 'nav'>Home</a>
            <a href="/admin/teachers" class = 'nav'>List Teacher</a>
            <a href="/admin/courses" class = 'nav'>List Course</a>
        </div>
        

    </div>

    <div class = 'isi'>
        <h1>Admin Page</h1>
        <div class = 'errors'>
            <%if (errors !== undefined) {%>
                <%errors.forEach(el => {%>
                    <p><%=el%></p>
                <%})%>
            <%}%>
        </div>
        <form action="/admin/addTeacher" method="post">
            <table>
                <tr>
                    <td>
                        <label for="name">Name</label>
                    </td>
                    <td>
                        <input type="text" id="name" name="name" class = 'isi2'>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="gender">Gender</label>
                    </td>
                    <td>
                        <select name="gender" id="gender" class = 'isi2'>
                            <option disabled selected value>Gender..</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="education">Education</label>
                    </td>
                    <td>
                        <select name="education" id="education" class = 'isi2'>
                            <option disabled selected value>Education..</option>
                            <option value="S1">S1</option>
                            <option value="S2">S2</option>
                            <option value="S3">S3</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="CourseId">Courses</label>
                    </td>
                    <td>
                        <select name="CourseId" id="CourseId" class = 'isi2'>
                            <option disabled selected value>Courses</option>
                            <%data.forEach(el => {%>
                                <option value="<%=el.id%>"><%=el.name%></option>
                            <%})%>
                        </select> 
                    </td>
                </tr>
            </table>
            
            <input type="submit" value="submit" class = 'submit'>
        </form>
        
    </div>
</body>
</html>